{
  "name": "op-auto-front",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href /OpAuto-front/",
    "predeploy": "npm run build:prod",
    "deploy:ghpages": "npx angular-cli-ghpages --dir=dist/OpAuto-front/browser",
    "deploy": "npm run predeploy && npm run deploy:ghpages",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:translation": "npx playwright test tests/translation --reporter=html",
    "test:translation-audit": "tsx tests/translation/run-translation-audit.ts",
    "test:translation-auth": "npx playwright test tests/translation/auth.spec.ts",
    "test:translation-dashboard": "npx playwright test tests/translation/dashboard.spec.ts",
    "test:translation-cars": "npx playwright test tests/translation/cars.spec.ts",
    "test:translation-maintenance": "npx playwright test tests/translation/maintenance.spec.ts",
    "test:translation-reliable": "npx playwright test tests/translation/reliable-*.spec.ts --reporter=html",
    "test:translation-reliable-auth": "npx playwright test tests/translation/reliable-auth.spec.ts",
    "test:translation-reliable-dashboard": "npx playwright test tests/translation/reliable-dashboard.spec.ts",
    "test:translation-reliable-cars": "npx playwright test tests/translation/reliable-cars.spec.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@tailwindcss/postcss": "^4.1.8",
    "chart.js": "^4.5.0",
    "ng2-charts": "^8.0.0",
    "postcss": "^8.5.4",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.8",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@playwright/test": "^1.55.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.0.0",
    "angular-cli-ghpages": "^2.0.3",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright": "^1.55.0",
    "tsx": "^4.7.0",
    "typescript": "~5.8.2"
  }
}
